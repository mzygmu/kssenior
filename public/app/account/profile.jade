.content.base-panel
  form.form-horizontal(name="profileForm")
    fieldset
      h2 Twoje dane
      .form-group
        label.col-md-2.control-label(for="email") E-mail
        .col-md-10
          input.form-control(name="email", type="email", placeholder="E-mail", ng-model="email", required)
      .form-group
        label.col-md-2.control-label(for="fname") Imię
        .col-md-10
          input.form-control(name="fname", type="text", placeholder="Imię", ng-model="fname", required)
      .form-group
        label.col-md-2.control-label(for="lname") Nazwisko
        .col-md-10
          input.form-control(name="lname", type="text", placeholder="Nazwisko", ng-model="lname", required)
      .form-group
        label.col-md-2.control-label(for="password") Hasło
        .col-md-10
          input.form-control(name="password", type="password", placeholder="Hasło", ng-model="password")
      .form-group
        .col-md-10.col-md-offset-2
          .pull-right
            button.btn.btn-primary(ng-click="update()", ng-disabled="signupForm.$invalid") Zatwierdź
            | &nbsp;
            a.btn.btn-default(href="/") Wyjdź
