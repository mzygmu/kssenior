.content.div-box
  div.inline
    h2 O klubie
  div.inline.actionPanel(ng-if="identity.currentUser.isAdmin()")
    button.btn.btn-lg.btn-primary(ng-click='openAboutWindow()') 
      span.glyphicon.glyphicon-plus Dodaj
  div
    div.pic-aside
      img(src="../img/Oklubie.png") 
    section.inline(ng-repeat="section in content | filter:'about' | orderBy:'-position'")
      div.inline 
        h4 {{section.sectionTitle}}
      div.inline(ng-if="identity.currentUser.isAdmin()")
        button.btn.btn-xs.btn-primary(ng-click='move(section)')
          span.glyphicon.glyphicon-arrow-up
        button.btn.btn-xs.btn-warning(ng-click='openAboutWindow(section)')
          span.glyphicon.glyphicon-pencil
        button.btn.btn-xs.btn-danger(ng-click='remove(section)') 
          span.glyphicon.glyphicon-remove
      div.description {{section.text}}