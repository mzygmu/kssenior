.content.div-box
  div.pic-desc
    div.inline
      h2 Opłaty i składki członkowskie
    div.inline.actionPanel(ng-if="identity.currentUser.isAdmin()")
      button.btn.btn-lg.btn-primary(ng-click='openChargesWindow()') 
        span.glyphicon.glyphicon-plus Dodaj
    section(ng-repeat="section in content | filter:'charges' | orderBy:position")
      div.inline 
        h4 {{section.sectionTitle}}
      div.inline(ng-if="identity.currentUser.isAdmin()")
        button.btn.btn-xs.btn-warning(ng-click='openChargesWindow(section)')
          span.glyphicon.glyphicon-pencil
        button.btn.btn-xs.btn-danger(ng-click='remove(section)') 
          span.glyphicon.glyphicon-remove
      div(ng-repeat="row in section.text")
        p {{row}}
